@import "reset.css"
@import "mixins.styl"

.ellipsis
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
#app
  width 100%
  height 100%
  background #f5f5f5;
  position relative
  .off
    display none
  #content
    width 100%
    section
      &.on
        display block
      width 100%
      display none
      /*第一屏*/
      &:nth-child(1)
        .msite_header
          position fixed
          top 0
          left 0
          z-index 100
          width 100%
          height 45px
          background #02a774
          .header_search
            position absolute;
            left 15px;
            top 50%;
            transform translateY(-50%);
            .iconfont
              font-size: 25px;
              color #fff;
          .header_title
            position absolute;
            left 50%;
            top 50%;
            transform translate(-50%,-50%)
            .header_title_text
              width 187px
              height 20px
              font-size: 20px;
              color: #fff;
              display: block;
          .header_login
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 14px;
            color: #fff;
        .swiper-container
          width 100%
          height 200px
          margin-top 45px
          background #fff
          bottom-border-1px(#e4e4e4)
          .swiper-slide
            width 200%
            height 100%
            clearFix()
            li
              width 25%
              float left
              a
                display flex
                flex-direction column
                align-items center
                margin 5px 0
                width 100%
                height 100%
                img
                  margin 8px 0
                  width 50%
                  height 50%
          .swiper-pagination
            .swiper-pagination-bullet-active
              background #02a774

        .msite_shop_list
          margin-top 10px
          width 100%
          background #fff
          top-border-1px(#e4e4e4)
        .shop_header
          width 100%
          padding 10px 10px 0
          span
            font-size 14px
            color #999
        .shp_item
          width 100%
          li
            width 100%
            height 105px
            box-sizing border-box
            padding 15px 10px
            bottom-border-1px(#e4e4e4)
            .shop-item-left
              float left;
              width 23%;
              height 75px;
              box-sizing border-box
              padding-right 10px;
              img
                width 100%
                height 100%
            .shop-item-right
              float right
              width 77%
              height 75px
              .shop_detail_header
                width 100%
                clearFix()
                .shop_title
                  &:before
                    content '品牌';
                    display inline-block;
                    font-size 11px;
                    line-height 11px;
                    color #333;
                    background-color #ffd930;
                    padding 2px 2px;
                    border-radius 2px;
                    margin-right 5px;
                  float: left;
                  width: 140px;
                  color: #333;
                  font-size: 16px;
                  line-height: 16px;
                  font-weight: 700;
                .shop_detail_ul
                  float right
                  clearFix()
                  span
                    font-size 10px;
                    color #999;
                    border 1px solid #f1f1f1;
                    padding 0 2px;
                    border-radius 2px;

              .shop_rating_order
                width 100%
                margin 18px 0 8px 0
                clearFix()
                .shop_rating_order_left
                  float left
                  clearFix()
                  .stars
                    float: left
                    margin-top -3px
                    .star-item
                      display inline-block
                      width 10px
                      height 10px
                      margin-right 3px;
                      background-size 10px 10px
                      background-repeat no-repeat
                      &:last-child
                        margin-right 0;
                      &.on
                        bg-image("../images/stars/star24_on")
                      &.half
                        bg-image("../images/stars/star24_half")
                      &.off
                        bg-image("../images/stars/star24_off")
                  .rating_section
                    float left;
                    font-size 10px;
                    color #ff6000;
                    margin-left 4px;
                  .order_section
                    float left
                    font-size 10px
                    color #666
                    transform scale(0.8)
                .shop_rating_order_right
                  float right
                  .delivery_style
                    transform-origin 35px 0;
                    transform scale(0.7);
                    display inline-block;
                    font-size 12px;
                    padding 1px;
                    border-radius: 2px;
                  .delivery_left
                    color #fff;
                    margin-right -10px;
                    background-color #02a774;
                    border 1px solid #02a774;
                  .delivery_right
                    color #02a774;
                    border 1px solid #02a774;

              .shop_distance
                width 100%
                font-size 12px
                .shop_delivery_msg
                  transform-origin 0;
                  transform scale(0.9);
                  color #666;
      /*第二屏*/
      &:nth-child(2)
        .search-header
          width 100%
          position fixed;
          z-index 100;
          left 0
          top 0
          height 45px
          background-color #02a774
          text-align center
          line-height 45px
          .header_title
            color #fff
            font-size 22px
        .search
          margin-top 45px
          background-color #fff
          padding 12px 8px;
          width 100%
          clearFix()
          input
            float: left
            width 79%
            height 35px
            box-sizing border-box
            padding 0 4px
            border 4px solid #f2f2f2
            border-radius 2px
            font-size 14px
            font-weight bold
            color #333
            background-color #f2f2f2
            outline none
          .btn
            float right
            float right
            width 18%
            height 35px
            border 4px solid #02a774
            font-size 16px
            color #fff
            background-color #02a774
      /*第三屏*/
      &:nth-child(3)
        .order-header
          width 100%
          position fixed;
          z-index 100;
          left 0
          top 0
          height 45px
          background-color #02a774
          text-align center
          line-height 45px
          .header_title
            color #fff
            font-size 22px
        .order-content
          padding-top 140px
          width 60%
          margin 0 auto
          text-align center
          img
            display block
            width 225px
            height 225px
          h3
            padding 10px 0;
            font-size 17px
            color #6a6a6a
          button
            display inline-block
            background #02a774
            font-size 14px
            color #fff
            border 0
            outline none
            border-radius 5px
            padding 10px 20px

      /*第四屏*/
      &:nth-child(4)
        .personal-header
          width 100%
          position fixed;
          z-index 100;
          left 0
          top 0
          height 45px
          background-color #02a774
          text-align center
          line-height 45px
          .header_title
            color #fff
            font-size 22px
        .personal-profile
          margin-top 45.5px
          position relative
          .profile-content
            background #02a774
            padding 20px 10px
            clearFix()
            .content-person
              float left
              width 60px
              height 60px
              border-radius 50%
              overflow: hidden
              .iconfont
                background #e4e4e4
                color #7e8c8d
                font-size 62px
            .content-user
              float left
              margin-top 8px
              margin-left 15px
              .user-header
                font-weight 700
                font-size 18px
                color #fff
                padding-bottom 8px
              .user-footer
                color #fff
                .iconfont
                  display inline-block;
                  margin-left -15px
                  margin-right 5px
                  width 20px
                  height: 20px
                  font-size 30px
                  vertical-align text-top
                span
                  font-size 14px
                  vertical-align text-bottom
            .arrow
              float right
              width 12px
              height 12px
              position absolute
              right 15px
              top 40%
              .iconfont
                color #fff
                font-size 5px


        .personal-info
          width 100%
          background #fff
          clearFix()
          .header
            display block
            width 100%
            color #333
            font-size 14px
            padding 15px 5px 10px
            span
              display inline-block
              font-size 30px
              font-weight 700;
              line-height 30px;
          .footer
            display inline-block
            font-size 14px
            color #666
            font-weight 400
            padding-bottom 10px
          .info-money
            float left
            width 33%
            text-align center
            border-right 1px solid #f1f1f1
            .money-header
              span
                color #f90
          .info-discounts
            float left
            width 33%
            text-align center
            border-right 1px solid #f1f1f1
            .discounts-header
              span
                color #ff5f3e
          .info-integral
            float left
            width 33%
            text-align center
            .integral-header
              span
                color #6ac20b

        .personal-order,.personal-server
          margin-top 10px
          background #fff
          .my_order
            display flex
            align-items center
            padding-left 15px
            .iconfont
              margin-left -10px
              font-size 30px
              &.icon-order-s
                color #02a774
              &.icon-jifen
                color #ff5f3e
              &.icon-vip
                color #f90
            .my_order_div
              width: 100%;
              border-bottom: 1px solid #f1f1f1;
              padding: 18px 10px 18px 0;
              font-size: 16px;
              color: #333;
              display: flex;
              justify-content: space-between;
              span
                display: block
              .icon-jiantou1
                display inline-block
                width 10px
                height 10px
                color #bbb
                font-size 10px

        .personal-server
          .icon-fuwu
            color #02a774
  #loginContainer
    width 100%
    height 100%
    background #fff
    .loginInner
      padding-top: 60px;
      width: 80%;
      margin: 0 auto;
      .login_header
        width 100%
        .login_logo
          font-size 40px
          font-weight bold
          color #02a774
          text-align center
        .login_header_title
          padding-top 40px
          text-align center
          a
            font-size 14px
            padding-bottom 4px
            &:first-child
              margin-right 40px
            &.on
              color #02a774
              font-weight 700
              border-bottom 2px solid #02a774
      .login_content
        width 100%
        margin-top 16px
        &>div
          display none
        .on
          display block
        input
          width 100%
          height 100%
          padding-left 10px
          box-sizing border-box
          border 1px solid #ddd
          border-radius 4px
          outline none
          font 400 14px Arial
        .login_message
          position relative
          width 100%
          height 48px
          font-size 14px
          background #fff
          .get_verification
            position absolute
            top 50%
            right 10px
            transform translateY(-50%)
            border 0
            color #ccc
            font-size 14px
            background transparent
        .login_verification
          position relative
          width 100%
          height 48px
          font-size 14px
          background #fff
          margin-top 16px
          .switch_button
            &.on_button
              background #02a774
              .switch_circle
                transform translateX(27px)
            position absolute
            top 50%
            right 10px
            transform translateY(-50%)
            width 30px
            height 16px
            border 1px solid #ddd
            border-radius 8px
            transition background-color 0.3s, border-color 0.3s
            padding 0 6px
            line-height 16px
            font-size 12px
            span
              color #fff
            .switch_circle
              position absolute
              top -1px
              left -1px
              width 16px
              height 16px
              border 1px solid #ddd
              border-radius 50%
              background #fff
              box-shadow 0 2px 4px 0 rgba(0,0,0,0.1)
              transition transform 0.3s
            .switch_text
              float right
              color #ddd
        .login_hint
          margin-top 12px
          color #999
          font-size 14px
          line-height 20px
        .login_submit
          display block
          width 100%
          height 42px
          margin-top 30px
          border-radius 4px
          background #4cd96f
          color #fff
          text-align center
          font-size 16px
          line-height 42px
          border 0
        .about_us
          display block
          font-size 12px
          margin-top 20px
          text-align center
          color #999
      .go_back
        position absolute
        top 5px
        left 5px
        width 30px
        height 30px
        .icon-jiantou2
          font-size 20px
  footer
    top-border-1px(#eee)
    position fixed
    left 0
    bottom 0
    z-index 100
    display flex
    width 100%
    height 50px
    background #fff
    .tabItem
      display flex
      flex 1
      text-align center
      flex-direction column
      align-items center
      margin 5px
      &.active
        color #02a774
      span
        font-size 12px
        margin-top 2px
        margin-bottom 2px
        .iconfont
          font-size 22px
        &:last-child
          font-size 12px
